{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "<%= offset %>dist/out-tsc",
    "module": "commonjs",
    "sourceMap": true,
    "moduleResolution": "node",
    "types": ["node"],
    "jsx": "react",
    "jsxFactory": "ForgeUI.createElement"
  },
  "exclude": ["jest.config.cts", "src/**/*.spec.ts", "src/**/*.test.ts"],
  "include": ["src/**/*.ts"]
}
