{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "<%= offset %>dist/out-tsc",
    "module": "commonjs",
    "target": "es2017",
    "sourceMap": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "lib": ["dom", "es2017"],
    "types": ["node"],
    "baseUrl": "./",
    "jsx": "react",
    "jsxFactory": "ForgeUI.createElement"
  },
  "exclude": ["**/*.spec.ts", "**/*.test.ts"],
  "include": ["**/*.ts"]
}
